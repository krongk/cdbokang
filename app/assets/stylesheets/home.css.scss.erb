
*{ margin:0; padding:0;}
ul,li{ list-style:none;}
img{ border:none;}
body{ background:url(<%=asset_path "back0.jpg" %>); font-size:12px;}
#wrapper{ width:996px; margin:0 auto;}
.heard{ background:url(<%=asset_path "headerbg.jpg" %>) repeat-x; height:37px; line-height:37px;}
.heard a{ text-decoration:none; color:#000;}
.heard a:hover{ text-decoration:underline; color:#000;}
.logobg{ background:url(<%=asset_path "top_back_02.jpg" %>) repeat-x; height:80px; padding-left:10px; overflow:hidden;}
.logo{ float:left;}
.tel{ float:left; margin-left:100px; line-height:24px; font-size:14px; color:#FFF; padding-top:20px;}
.loright{ float:right; padding-right:40px; padding-top:10px;}
.textbn{ line-height:20px; height:20px;}
.loright a{ text-decoration:none; color:#fff;}
.lef1,.lef2{ float:left;}
.lef2{ margin-left:6px;}
.menu{ background:url(<%=asset_path "tu_3.jpg" %>) repeat-x; height:65px; line-height:65px;}
.menu li{ float:left;margin:0 8px; text-align:center;}
.menu li a{ text-decoration:none; font-weight:bold; color:#FFF; font-size:14px;}
.menu li a:hover{font-weight:bold; color:#FFF; background:url(<%=asset_path "current.gif" %>) no-repeat 0 -6px; width:67px; height:54px; display:block;}
.current{ background:url(<%=asset_path "current.gif" %>) no-repeat 0 -6px; width:67px; height:54px; margin-top:15px;}



.footer{ background:url(<%=asset_path "bottombg.jpg" %>) repeat-x; height:117px; padding-top:15px; overflow:hidden; width:995px;}
.logobt{ background:url(<%=asset_path "logo2.jpg" %>); width:284px; height:90px; float:left; }
.fotter2{ float:left; margin-left:60px; margin-top:20px; line-height:20px; color:#FFF;}
.fotter2 a{ text-decoration:none; color:#FFF;}
.fotter2 a:hover{ text-decoration:underline; color:#FFF;}


/*************index*****/
.content{ border:1px solid #000; width:990px; margin:0 auto; background:#F9E1B1; padding:2px; }
.ct1{ border:1px solid #7C5B00; background:#F4D26E; padding:2px;}
.ct2{ border:1px solid #CCAB68; background:#fff; padding:2px; overflow:hidden;}

<!--图片切换css-->
.container, .container *{margin:0; padding:0;} 

.container{width:976px; height:348px; overflow:hidden;} 

.slider{position:absolute;} 
.slider li{ list-style:none;display:inline;} 
.slider img{ width:976px; height:348px; display:block;} 
.num{ position:absolute; right:4px; bottom:6px;} 
.num li{ 
    float: left; 
    color: #FF7300; 
    text-align: center; 
    line-height: 10px; 
    width: 10px; 
    height: 10px; 
    font-family: Arial; 
    font-size: 12px; 
    overflow: hidden; 
	padding:3px;
    margin: 0 2px; 
    background-color: #fff; 
} 
.num li.on{ 
    color: #fff; 
    line-height: 10px; 
    width: 10px; 
    height: 10px; 
    font-size: 12px; 
    margin: 0 2px; 
    border: 0; 
    background-color: #FF7300; 
    font-weight: bold; 
} 

<!---end-->

